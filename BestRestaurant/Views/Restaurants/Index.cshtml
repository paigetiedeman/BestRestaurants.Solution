@{
  Layout = "_Layout";
}

@using BestRestaurant.Models;
@model List<BestRestaurant.Models.Restaurant>;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
} 

@foreach (Restaurant restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId }) | @restaurant.Cuisine.Type | @restaurant.Price | @restaurant.Rating </li>
}

<p class="btn btn-dark">@Html.ActionLink("Add new restaurant", "Create")</p>
<p class="btn btn-dark">@Html.ActionLink("Home", "Index", "Home")</p>
