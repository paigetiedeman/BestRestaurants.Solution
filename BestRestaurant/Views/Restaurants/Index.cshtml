@{
  Layout = "_Layout";
}

@using BestRestaurant.Models;
@model List<BestRestaurant.Models.Restaurant>;

<h1>Restaurants</h1>
<hr>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
} 

@foreach (Restaurant restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId, style = "color:white;" }) | @restaurant.Cuisine.Type | @restaurant.Price | @restaurant.Rating </li>
    @* <ol>
      <li>@Html.ActionLink($"{Review.Description}", new { id = review.ReviewId})</li>
    </ol> *@
}

<br>
<p class="btn btn-dark">@Html.ActionLink("Add New Restaurant", "Create", new { style = "color:white"})</p>
<p class="btn btn-dark">@Html.ActionLink("Add New Cuisine", "Create", "Cuisines", null, new { style = "color:white"})</p>
<p class="btn btn-dark">@Html.ActionLink("Home", "Index", "Home", null, new { style = "color:white"})</p>
<p class="btn btn-dark">@Html.ActionLink("Search", "Search", new { style = "color:white"})</p>
