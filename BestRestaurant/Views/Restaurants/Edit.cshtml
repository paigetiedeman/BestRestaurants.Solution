@{
  Layout = "_Layout";
}

@model BestRestaurant.Models.Restaurant

<h3>Edit this Name: @Html.DisplayFor(model => model.Name)</h3>

@using (Html.BeginForm())
{
<div class="form-group">
  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name, new {@class = "form-control", @required = "required"})
</div>

<div class="form-group">
  @Html.LabelFor(model => model.Cuisine)
  @Html.DropDownList("CuisineId")
</div>

<div class="form-group">
  <input type="submit" value="Add new restaurant" class="btn btn-dark"/>
</div>
}
<p class="btn btn-dark">@Html.ActionLink("Back to list", "Index")</p>