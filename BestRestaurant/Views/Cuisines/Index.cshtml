@{
  Layout = "_Layout";
}

@using BestRestaurant.Models;

<h1>Cuisine</h1>

@if (@Model.Count == 0)
{
  <h3>No cuisines have been added yet!</h3>
} 

<ul>
  @foreach(Cuisine cuisine in Model)
  {
    <li>@Html.ActionLink($"{cuisine.Type}", "Details", new { id = cuisine.CuisineId })</li>
  }
</ul>

<p class="btn btn-dark">@Html.ActionLink("Add New Cuisine", "Create")</p>
<p class="btn btn-dark">@Html.ActionLink("Home", "Index", "Home")</p>