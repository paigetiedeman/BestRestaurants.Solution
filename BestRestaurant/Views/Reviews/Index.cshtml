@{
  Layout = "_Layout";
}

@using BestRestaurant.Models;
@model List<BestRestaurant.Models.Review>;

<h1>Restaurant Reviews:</h1>
<hr>

@if (@Model.Count == 0)
{
  <h3>No reviews have been added for this restaurant.</h3>
}

<ul>
  @foreach (Review review in Model)

{
  <li>@Html.ActionLink($"{review.Description}", "Details", new { id = review.ReviewId, style = "color:white"}) | @Html.ActionLink($"{review.Restaurant.Name}", "Details", "Restaurants", new { id = review.RestaurantId})</li>
}
</ul>

<p class="btn btn-dark">@Html.ActionLink("Add New Review", "Create", null, new { style = "color:white"})</p>
<p class="btn btn-dark">@Html.ActionLink("Home", "Index", "Home", null, new { style = "color:white"})</p>