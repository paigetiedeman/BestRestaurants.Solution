
@{
  Layout = "_Layout";
}

@model BestRestaurant.Models.Review

<h4>Add a Review</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)

    @Html.LabelFor(model => model.Restaurant)
    @Html.DropDownList("CuisineId")

    <input type="submit" value="Add new item" class="btn btn-default" />
}
<p class="btn btn-dark">@Html.ActionLink("Show all Reviews", "Index")</p>